#!/bin/sh
# Caution, must be kept compatible with dash used by some Linux distros.

NDLESS="$(nspire-tools path)"

home="${USERPROFILE:-$HOME}"
mkdir -p "$home/.ndless/include"
DC="$(nspire-tools _toolchainpath)/arm-none-eabi-gdc"
exec "$DC" -mcpu=arm926ej-s -fno-druntime -D _TINSPIRE -fuse-ld=gold "$@" -I "$home/.ndless/include" -I "${NDLESS}/include" -I "${NDLESS}/include/freetype2"
